var beerSchema = new mongoose.Schema({
  brewery: {type: String, required: true},
  beer: {type: String, required: true},
  style: String,
  date: String,
  forTrade: Boolean
});

var cellarSchema = new mongoose.Schema({
  username: String,
  beers: [beerSchema]
});

db.cellars.save({
  username: 'Ralph',
