<h1>{{pageHeader.title}}</h1>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8 col-xs-12">
        <div id='cellar-list-container'>
          <form method="get" action="/add">
            <button type="submit" id="add-beer-btn" class="btn btn-primary">Add a Beer</button>
          </form>
          <script>
          // Handlebars.registerHelper("getForTrade", function(forTrade){
          //   if (this.forTrade == true) {
          //     this.forTrade == "Yes"
          //   } else {
          //     this.forTrade == "No"
          //   }
          // });
          </script>
          <table class="table table-striped">
            <tr>
              <th>Brewery</th>
              <th>Beer</th>
              <th>Style</th>
              <th>Bottling Date</th>
              <th>For Trade?</th>
              <th>Edit</th>
            </tr>
            {{#each beers}}
            <tr>
              <td>{{this.brewery}}</td>
              <td>{{this.beer}}</td>
              <td>{{this.style}}</td>
              <td>{{this.date}}</td>
              <td>{{getForTrade this.forTrade}}</td>
              <td><a href="/" id="edit-beer-link"><span class="glyphicon glyphicon-pencil"></span></td>
            {{/each}}
            </tr>
          </table>
         </div>
        </div>

        <div class="col-md-2 col-xs-8">
          <div id="sort-column-container">
            <h4>Sort</h4>
            <table class="table table-striped">
              <tr>
                <td><input type="checkbox"></td>
                <td>American Imperial Stout</td>
              </tr>
              <tr>
                <td><input type="checkbox"></td>
                <td>Lambic</td>
              </tr>
              <tr>
                <td><input type="checkbox"></td>
                <td>Saison</td>
              </tr>
              <tr>
                <td><input type="checkbox"></td>
                <td>For Trade</td>
              </tr>
            </table>
        </div>
      </div>
    </div>
  </div>
